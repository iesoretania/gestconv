{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-principal">
                    <span class="sr-only">Desplegar</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('portada') }}">
                    Gestconv
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-principal">
                {% block navbarcontent %}
                    {% if is_granted('ROLE_USUARIO') %}
                        <p class="navbar-text navbar-right"></p>
                        <p class="navbar-text navbar-right">Conectado como {{ app.user.nombre }} {{ app.user.apellidos }}</p>
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    </nav>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% block content %}{% endblock %}
    </div>

    <footer class="footer no-imprimir" role="contentinfo">
        <div class="container">
            {% block footer %}
                <p class="text-muted">
                    &copy; 2015, Luis Ramón López López
                </p>
            {% endblock %}
        </div>
    </footer>
{% endblock %}
