        &nbsp;<a href="{{ path('usuario_nuevo') }}" class="btn btn-success"><i class="fa fa-user-plus"></i> Crear un usuario</a>&nbsp;<a href="{{ path('usuario_importar') }}" class="btn btn-warning"><i class="fa fa-upload"></i> Importar o actualizar usuarios desde SÃ©neca</a>
    {% endif %}

{% endblock %}
